{
  "name": "slidev",
  "preview": true,
  "displayName": "Slidev",
  "version": "0.0.0",
  "description": "Slidev support for Vite",
  "publisher": "antfu",
  "license": "MIT",
  "icon": "res/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidev/slidev-vscode"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/index.js",
  "contributes": {
    "commands": [],
    "menus": {},
    "configuration": {
      "type": "object",
      "title": "Slidev",
      "properties": {}
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slidev",
          "title": "Slidev",
          "icon": "res/logo-mono.svg",
          "when": "slidev-enabled"
        }
      ]
    },
    "views": {
      "slidev": [
        {
          "id": "slidev-slides",
          "name": "Slides",
          "when": "slidev-enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsup src/index.ts --dts --external=vscode",
    "dev": "npm run build -- --watch",
    "release": "npx bumpp --commit --tag --push && vsce publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.6.4",
    "@antfu/utils": "^0.1.2",
    "@slidev/parser": "^0.0.0-alpha.39",
    "@slidev/types": "^0.0.0-alpha.39",
    "@types/node": "^15.0.1",
    "@types/vscode": "^1.52.0",
    "eslint": "^7.25.0",
    "pkg-up": "^3.1.0",
    "tsup": "^4.10.1",
    "types-package-json": "^2.0.39",
    "typescript": "^4.2.4"
  }
}
